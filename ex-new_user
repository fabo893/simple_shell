struct User
{
	char *name;
	char *email
	int age;
};

int main(void)
{
	struct User user;
	struct User *ptr;
	ptr = &user;
/* Dereferencing the pointer bedore access the date with '.' symbol */

	(*ptr).name = "Foo Bar";

/* Using the '->' works the same, and is so much easier */

	ptr->email = "foo@hbtn.com";
	return (0);
}	
